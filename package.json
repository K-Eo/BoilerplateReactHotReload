{
  "name": "react-boilerplate",
  "version": "0.0.0",
  "description": "Boilerplate with React, GraphQL, Redux, Mocha & Sass.",
  "main": "index.js",
  "config": {
    "express": 3000,
    "graphql": 3002,
    "hotreload": 3004
  },
  "scripts": {
    "assets": "echo '# Copy assets' && cp -r ./app/assets/. ./public",
    "build": "echo '# Build production' && webpack -p --config ./webpack.prod.config.js",
    "build:development": "webpack --config ./webpack.dev.config.js",
    "clean": "echo '# Clean public/' && rimraf public/*",
    "dev": "npm run build:development && npm run server:development ",
    "dev:graphql": "nodemon ./server.graphql.js",
    "dev:hot": "node server.hotreload.js",
    "dev:watch": "concurrently --raw --kill-others \"npm run server:production\" \"npm run build:development -- -w\"",
    "predev": "npm run clean -s && npm run assets -s",
    "predev:hot": "npm run clean -s && npm run assets -s",
    "predev:watch": "npm run clean -s && npm run assets -s",
    "pretest": "npm run clean -s && npm run assets",
    "pretest:watch": "npm run clean -s && npm run assets",
    "server:development": "node server.dev.js",
    "server:graphql": "node server.graphql.js",
    "server:production": "echo '# Start server' && node server.production.js",
    "start": "echo '# Production' && npm run clean -s && npm run assets -s && npm run build -s && npm run server:production -s",
    "test": "concurrently --success first --kill-others \"npm run server:graphql\" \"karma start --single-run\"",
    "test:watch": "concurrently --kill-others \"npm run server:graphql\" \"karma start\""
  },
  "private": true,
  "author": "Diego Lopez Garcia <aud0l@hotmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.13.1",
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "css-loader": "^0.23.1",
    "express": "^4.13.4",
    "express-graphql": "^0.5.3",
    "graphql": "^0.6.2",
    "html-webpack-plugin": "^2.22.0",
    "jquery": "^2.2.4",
    "moment": "^2.13.0",
    "node-env-file": "^0.1.8",
    "node-sass": "^3.7.0",
    "node-uuid": "^1.4.7",
    "react": "^15.2.0",
    "react-dom": "^15.2.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.6.0",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "sass-loader": "^4.0.0",
    "script-loader": "^0.7.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1",
    "webpack-config": "^5.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "chai": "^3.5.0",
    "concurrently": "^2.2.0",
    "enzyme": "^2.4.1",
    "eslint": "^3.1.1",
    "eslint-plugin-react": "^5.1.1",
    "karma": "^1.1.2",
    "karma-chrome-launcher": "^1.0.1",
    "karma-mocha": "^1.0.1",
    "karma-mocha-reporter": "^2.0.3",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.5.3",
    "react-addons-test-utils": "^15.2.0",
    "react-hot-loader": "^1.3.0",
    "redux-mock-store": "^1.1.2",
    "rimraf": "^2.5.4",
    "webpack-dev-server": "^1.14.1"
  }
}
